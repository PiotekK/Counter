<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.CreateNewCounter"
             Title="CreateNewCounter"
             BackgroundColor="Gray">
    <VerticalStackLayout>
        <Label 
            Text="Add new counter"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="CounterNameEntry"
            Placeholder="Name of your new counter"
            HorizontalOptions="Center"/>

        <Entry 
            x:Name="CounterStartValueEntry"
            Placeholder="Initial value of your new counter"
            Keyboard="Numeric"/>

        <Picker x:Name="CounterColorEntry">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Lightblue</x:String>
                    <x:String>Lightgreen</x:String>
                    <x:String>Yellow</x:String>
                    <x:String>Red</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button
            x:Name="NewCounterButton"
            Text="Add counter"
            Clicked="OnNewCounterButtonClicked"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>